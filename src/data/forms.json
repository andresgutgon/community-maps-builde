{
  "first-form": {
    "slug": "first-form",
    "ctaLabel": "Haz click aquí",
    "formButtonLabel": "Guardar esto",
    "description": "Descripción para este formulario",
    "initialData": {
      "contribution_type": "prepaid",
      "prepaid_contribution_amount_in_cents": 25000,
      "sponsorship_contribution_amount_in_cents": 30000
    },
    "jsonSchema": {
      "type":"object",
      "properties":{
        "contribution_type": {
          "type": "string",
          "enum": ["prepaid", "sponsorship"],
          "i18n": "contribution_type",
          "translations": {
            "prepaid": "Prepago",
            "sponsorship": "Apadrinamiento"
          }
        },
        "prepaid_contribution_amount_in_cents": {
          "type": "integer",
          "minimum": 5000,
          "maximum": 500000,
          "default": 100000,
          "description": "Compra hores por adelantado para usar un cotxe"
        },
        "sponsorship_contribution_amount_in_cents": {
          "type": "integer",
          "minimum": 25000,
          "maximum": 1000000,
          "default": 120000,
          "description": "Apadrina un cotxe. Recuperes els diners al cap de 3 anys i gaudeixes d'una millor tarifa."
        },
        "name": { "type": "string", "minLength": 2 },
        "telephone":{
          "type":"integer",
          "description": "Sólo números en tú teléfono : )"
        },
        "email":{
          "type":"string",
          "format": "email",
          "description": "Tu email para poder contactarte"
        },
        "identifier":{
          "type":"string"
        }
      },
      "required": [
        "contribution_type",
        "name",
        "telephone",
        "email",
        "identifier"
      ]
    },
    "uiSchema": {
      "type":"VerticalLayout",
      "elements": [
        {
          "type": "Group",
          "label": "Tus datos de contacto",
          "elements": [
            {
              "type":"VerticalLayout",
              "elements":[
                {
                  "type":"Control",
                  "scope":"#/properties/name",
                  "label": "Nombre",
                  "options": {
                    "placeholder": "Nombre y appellidos"
                  }
                },
                {
                  "type":"Control",
                  "scope":"#/properties/email",
                  "label":"Email",
                  "options": {
                    "placeholder": "Tu correo electrónico"
                  }
                },
                {
                  "type": "HorizontalLayout",
                  "elements": [
                    {
                      "type": "Control",
                      "scope":"#/properties/telephone",
                      "label": "Teléfono"
                    },
                    {
                      "type": "Control",
                      "scope": "#/properties/identifier",
                      "label":"DNI"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "Group",
          "label": "Tu aportación",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/image_url",
               "options": {
                "src": "car-photo.jpg"
              }
            },
            {
              "type": "Control",
              "scope": "#/properties/contribution_type",
              "label": "Tipo de aportación",
              "options": { "format": "radio" }
            },
            {
              "type":"Control",
              "scope":"#/properties/sponsorship_contribution_amount_in_cents",
              "label": "Tu aportación",
              "rule": {
                "effect": "SHOW",
                "condition": {
                  "scope": "#/properties/contribution_type",
                  "schema": { "enum": ["sponsorship"] }
                }
              },
              "options": {
                "pricing": true,
                "formatValue": "currency",
                "pricingRates": [
                  {
                    "minimum": 25000,
                    "maximum": 99900,
                    "rates": {
                      "hourly": 500,
                      "daily": 5000
                    }
                  },
                  {
                    "minimum": 100000,
                    "maximum": 499900,
                    "rates": {
                      "hourly": 450,
                      "daily": 4500
                    }
                  },
                  {
                    "minimum": 500000,
                    "maximum": 1000000,
                    "rates": {
                      "hourly": 400,
                      "daily": 4000
                    }
                  }
                ]
              }
            },
            {
              "type":"Control",
              "scope":"#/properties/prepaid_contribution_amount_in_cents",
              "label": "Tu aportación",
              "rule": {
                "effect": "SHOW",
                "condition": {
                  "scope": "#/properties/contribution_type",
                  "schema": { "enum": ["prepaid"] }
                }
              },
              "options": {
                "pricing": true,
                "formatValue": "currency",
                "pricingRates": [
                  {
                    "minimum": 5000,
                    "maximum": 24900,
                    "rates": {
                      "hourly": 500,
                      "daily": 5000
                    }
                  },
                  {
                    "minimum": 25000,
                    "maximum": 99900,
                    "rates": {
                      "hourly": 450,
                      "daily": 4500
                    }
                  },
                  {
                    "minimum": 100000,
                    "maximum": 100000,
                    "rates": {
                      "hourly": 400,
                      "daily": 4000
                    }
                  }
                ]
              }
            }
          ]
        }
      ]
    }
  },
  "bike_charger": {
    "slug": "bike_charger",
    "jsonSchema": {
      "type":"object",
      "properties":{
        "name":{
          "type":"string"
        },
        "email":{
          "type":"string",
          "format": "email"
        }
      },
      "required": ["name", "email"]
    },
    "uiSchema": {
      "type":"VerticalLayout",
      "elements":[
        {
          "type":"Control",
          "scope":"#/properties/name",
          "label": "Nombre"
        },
        {
          "type":"Control",
          "scope":"#/properties/email",
          "label":"Email"
        }
      ]
    }
  }
}

