{
  "first-map": {
    "jsonSchema": {
      "type":"object",
      "properties":{
        "contribution_type": {
          "type": "string",
          "enum": ["prepaid", "sponsorship"]
        },
        "name":{
          "type":"string"
        },
        "telephone":{
          "type":"integer"
        },
        "email":{
          "type":"string",
          "format": "email",
          "description": "Tu email para poder contactarte"
        },
        "identifier":{
          "type":"string"
        }
      },
      "required": [
        "contribution_type",
        "name",
        "telephone",
        "email",
        "identifier"
      ]
    },
    "uiSchema": {
      "type":"VerticalLayout",
      "elements":[
        {
          "type": "Group",
          "label": "Tu aportación",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/contribution_type",
              "label": "Tipo de contribución",
              "options": {
                "format": "radio"
              }
            }
          ]
        },
        {
          "type": "Group",
          "label": "Datos personales",
          "elements": [
            {
              "type":"VerticalLayout",
              "elements":[
                {
                  "type":"Control",
                  "scope":"#/properties/name",
                  "label": "Nombre"
                },
                {
                  "type":"Control",
                  "scope":"#/properties/email",
                  "label":"Email"
                },
                {
                  "type": "HorizontalLayout",
                  "elements": [
                    {
                      "type": "Control",
                      "scope":"#/properties/telephone",
                      "label": "Teléfono"
                    },
                    {
                      "type": "Control",
                      "scope": "#/properties/identifier",
                      "label":"DNI"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  }
}

