{
  "first-map": {
    "jsonSchema": {
      "type":"object",
      "properties":{
        "contribution_type": {
          "type": "string",
          "enum": ["prepaid", "sponsorship"],
          "i18n": "contribution_type",
          "translations": {
            "prepaid": "Prepago",
            "sponsorship": "Apadrinamiento"
          },
          "description": "Els compromisos d'aportacions només es demanarà que es facin efectius si s'assoleixen el 100% dels compromisos per finançar el vehicle. Som Mobilitat informarà les persones sòcies quan s'hagi assolit l'objectiu econòmic"
        },
        "prepaid_contribution_amount": {
          "type": "integer",
          "minimum": 50,
          "maximum": 10000,
          "default": 250,
          "description": "Compra hores per avançat para usar un cotxe (mínim 50 €, màxim 10.000 €)"
        },
        "sponsorship_contribution_amount": {
          "type": "integer",
          "minimum": 250,
          "maximum": 10000,
          "default": 400,
          "description": "Apadrina un cotxe (mínim 250 €, màxim 10.000 €). Recuperes els diners al cap de 3 anys i gaudeixes d'una millor tarifa."
        },
        "name":{
          "type":"string"
        },
        "telephone":{
          "type":"integer",
          "description": "Sólo números en tú teléfono : )"
        },
        "email":{
          "type":"string",
          "format": "email",
          "description": "Tu email para poder contactarte"
        },
        "identifier":{
          "type":"string"
        }
      },
      "required": [
        "contribution_type",
        "name",
        "telephone",
        "email",
        "identifier"
      ]
    },
    "uiSchema": {
      "type":"VerticalLayout",
      "elements":[
        {
          "type": "Group",
          "label": "Tu aportación",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/contribution_type",
              "label": "Tipo de aportación",
              "options": { "format": "select" }
            },
            {
              "type":"Control",
              "scope":"#/properties/sponsorship_contribution_amount",
              "label": "Import de l'apadrinament",
              "rule": {
                "effect": "SHOW",
                "condition": {
                "scope": "#/properties/contribution_type",
                  "schema": { "enum": ["sponsorship"] }
                }
              },
              "options": { "slider": true, "formatValue": "currency" }
            },
            {
              "type":"Control",
              "scope":"#/properties/prepaid_contribution_amount",
              "label": "Import del prepagament",
              "rule": {
                "effect": "SHOW",
                "condition": {
                "scope": "#/properties/contribution_type",
                  "schema": { "enum": ["prepaid"] }
                }
              },
              "options": { "slider": true, "formatValue": "currency" }
            }
          ]
        },
        {
          "type": "Group",
          "label": "Tus datos de contacto",
          "elements": [
            {
              "type":"VerticalLayout",
              "elements":[
                {
                  "type":"Control",
                  "scope":"#/properties/name",
                  "label": "Nombre"
                },
                {
                  "type":"Control",
                  "scope":"#/properties/email",
                  "label":"Email"
                },
                {
                  "type": "HorizontalLayout",
                  "elements": [
                    {
                      "type": "Control",
                      "scope":"#/properties/telephone",
                      "label": "Teléfono"
                    },
                    {
                      "type": "Control",
                      "scope": "#/properties/identifier",
                      "label":"DNI"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  }
}

